<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zds.bioengtsnapp.mapper.CourseModulesMapper">

    <resultMap id="BaseResultMap" type="com.zds.bioengtsnapp.domain.CourseModules">
            <result property="id" column="id" />
            <result property="courseId" column="course_id" />
            <result property="yearNumber" column="year_number" />
            <result property="moduleType" column="module_type" />
            <result property="moduleName" column="module_name" />
    </resultMap>

    <sql id="Base_Column_List">
        id,course_id,year_number,module_type,module_name
    </sql>

    <select id="selectByCourseId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM public.course_modules
        WHERE course_id = #{courseId}
        ORDER BY year_number, module_type, module_name
    </select>
</mapper>
